{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false,
    "__BASENAME__" : false,
    "$crisp": true,
    "window.$crisp": true,
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-confusing-arrow": 0,
    "react/jsx-quotes": 0,
    "jsx-quotes": [2, "prefer-double"],
    "new-cap": 0,
    "prefer-template": 0,
    "react/prefer-stateless-function": 0,
    "no-console": 1,
  }
}
